{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
  },

  "include": [
    ".eslintrc.js",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],

  "exclude": [
    "node_modules",
    "dist",
  ],
}
