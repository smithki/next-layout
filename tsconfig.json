{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true, // We use `esbuild` to bundle output
    "declaration": true,
    "declarationDir": "dist/types"
  },

  "include": [
    ".eslintrc.js",
    "**/*.ts",
    "**/*.tsx",
  ],
}
